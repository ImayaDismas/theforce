<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaykayitare.theforce.CreateProfile">
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jaykayitare.theforce.CreateProfile">

    <RelativeLayout
        android:id="@+id/image_input"
        android:background="@color/backgroundgrey"
        android:layout_width="match_parent"
        android:layout_height="380dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_marginTop="68dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_add_profile_img" />
        <TextView
            android:id="@+id/add_image_text"
            android:textColor="@color/addImageColor"
            android:textSize="28sp"
            android:text="(Add Profile Image)"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageButton"
            android:layout_marginTop="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/image_input"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="40dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_input_layout">
            <EditText
                android:id="@+id/name"
                android:hint="Name"
                android:textSize="28sp"
                android:textColorHint="@color/textgrey"
                android:textColor="@color/textblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_input_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/username_input_layout"
            >
            <EditText
                android:id="@+id/username"
                android:hint="Username"
                android:textSize="28sp"
                android:textColorHint="@color/textgrey"
                android:textColor="@color/textblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_input_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/location_input_layout"
            >
            <EditText
                android:id="@+id/location"
                android:hint="Location"
                android:textSize="28sp"
                android:textColorHint="@color/textgrey"
                android:textColor="@color/textblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_input_layout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/website_input_layout"
            >
            <EditText
                android:id="@+id/website"
                android:hint="Website"
                android:textSize="28sp"
                android:textColorHint="@color/textgrey"
                android:textColor="@color/textblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/aboutme"
            android:text="About me"
            android:textStyle="bold"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="26dp"
            android:textSize="36sp"
            android:layout_below="@id/website_input_layout"
            android:textColor="@color/textblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/summary_input_layout"
            android:layout_below="@id/aboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/summary"
                android:textSize="28sp"
                android:hint="Add summary here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/create_profile"
            android:text="Create Profile"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textColor="#FFF"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_below="@id/summary_input_layout"
            android:background="@color/buttonorange"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</RelativeLayout>
</ScrollView>


</RelativeLayout>